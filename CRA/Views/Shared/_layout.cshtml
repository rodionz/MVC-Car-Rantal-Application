
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet"/>   
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/MainScript.js"></script>
    <link href="~/Content/MainStyle.css" rel="stylesheet" />
    <title>_layout</title>
</head>
<body>
    <header>
        <div class="navbar navbar-default navbar-static-top">
            <div class="container">
                <a href="/" class="navbar-brand" id="brand">Zodiac Car Rental</a>


                <div style="float:left">
                    @if (User.Identity.IsAuthenticated)
            {
                        <span>Hello @User.Identity.Name</span>
                        <br />
                        @Html.ActionLink("Sign out", "LogOff")
                    }
                    else
                    {
                        <span>Hello guest! @Html.ActionLink("Please Login", "Login", "Home")</span>
                        <span>@Html.ActionLink("or Sign Upn", "SignUp", "Home")</span>
                    }

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Manager"))
            {
                        @Html.ActionLink("Managers only", "Index")
                    }
                </div>

                <ul class="nav nav-pills navbar-right">

                    <li><a href="@Url.Action("Index","CarSearch")" >Search a Car</a></li>
                    <li><a href="@Url.Action("Index","Reservation")">Your Reservation</a></li>
                    <li><a href="@Url.Action("Index","CarReturn")">Car return</a></li>
                    <li><a href="@Url.Action("Index","Manager")">Manager</a></li>


                </ul>
            </div>
        </div>
    </header>
    @RenderBody();


    <footer>
        <div class="container">
            <div class="row text-right">
                <h4>Contact Us</h4>
                <ul class="list-unstyled" >
                    <li>Jerusalem, Israel</li>
                    <li>0545745982</li>
                    <li><a href='mailto:rodion@zodiac.software'></a>rodion@zodiac.software</li>
                </ul>
                <p>Rodion Zinovyev &copy;2016.</p>
            </div>
        </div>
    </footer>
</body>
</html>
