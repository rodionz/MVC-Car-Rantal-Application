@model CarRental.MVC.Models.CarViewModel

<h2>Picture</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@using (Html.BeginForm("SubmitPicture", "Manager", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
	<div class="col-sm-8">
    <input id="picture" class="form-control" name="Upload" type="file" />
    <input type="submit" class="file btn btn-primary" id="submitPicture" value="submit" />

		</div>
	<div>
    @Html.HiddenFor(x => x.ID, new {@class = "carID" })
    @Html.HiddenFor(x => x.BranchID,{@class = "Branch" })
    @Html.HiddenFor(x => x.CarNumber, {@class = "CarNumber"})
    @Html.HiddenFor(x => x.Mileage, {@class = "Mileage"})
    @Html.HiddenFor(x => x.ModelID, {@class = "Model"})
    @Html.HiddenFor(x => x.ProperState, {@class = "properState"})




}