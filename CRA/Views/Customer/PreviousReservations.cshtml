@model IEnumerable<CarRental.MVC.Models.DealViewModel>

@{
    ViewBag.Title = "PreviousReservations";
    Layout = "~/Views/Shared/_layout.cshtml";
}


<h3>Your Previous Reservations</h3>


@if (TempData["Success"] != null)
{
    <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
}


<div class="container-fluid">
    <div class="row">
        <div class="col-sm-5">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SupposedReturn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RealReturn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClientID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CarID)
                        </th>

                    </tr>
                </thead>


                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupposedReturn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RealReturn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClientID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CarID)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>
